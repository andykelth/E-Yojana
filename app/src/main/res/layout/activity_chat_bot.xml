<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatBot">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/cardView2"
        tools:layout_editor_absoluteX="-2dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="72dp">


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="E-GPT"
                android:textAlignment="center"
                android:textSize="34sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/queryEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="TRY..." />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/sendPromptButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="Send query" />

            <ProgressBar
                android:id="@+id/sendPromptProgressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/modelResponseTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="16dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp" />


        </LinearLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="400dp"
        android:layout_height="52dp"
        app:cardBackgroundColor="@color/gray"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/homefromchat"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="8.5dp"
            android:layout_marginBottom="8.5dp"
            android:src="@drawable/home_outline">
        </ImageView>

        <ImageView
            android:id="@+id/catagoryfromchat"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="139dp"
            android:layout_marginTop="8.5dp"
            android:layout_marginBottom="8.5dp"
            android:src="@drawable/category_outline">
        </ImageView>

        <ImageView
            android:id="@+id/chatbotfromchat"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="226dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="8.5dp"
            android:src="@drawable/chatbot_black"
            tools:ignore="ContentDescription">
        </ImageView>

        <ImageView
            android:id="@+id/userfromchat"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="313dp"
            android:layout_marginTop="8.5dp"
            android:layout_marginBottom="8.5dp"
            android:src="@drawable/user_outline"
            tools:ignore="ContentDescription">

        </ImageView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>